pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
	stage('Build Docker Image') {
            steps {
                sh 'docker build -t flask-app -f docker/Dockerfile'
            }
        }

        stage('Deploy Container') {
            steps {
                sh 'docker rm -f flask || true'
                sh 'docker run -d -p 5000:5000 --name flask flask-app'
            }
        }
    }
}
